%nav.navbar.navbar{role: "navigation"}
  %ul.navbar-nav.navbar
    - if user_signed_in?
      %li{:class => "nav-item #{active?(root_path)}"}
        = link_to "Home", root_path
        %i.fa.fa-home
      %li{:class => "nav-item #{active?(edit_user_registration_path)}"}
        = link_to "Edit Profile", edit_user_registration_path
        %i.fa.fa-cog
      %li{:class => "nav-item #{active?(posts_path)}"}
        = link_to "All Posts", posts_path
      %li{:class => "nav-item #{active?(new_post_path)}"}
        = link_to "New Post", new_post_path
      %li{:class => "nav-item #{active?(destroy_user_session_path)}"}
        = link_to "Sign Out", destroy_user_session_path, method: :delete
    - else
      %li{:class => "nav-item #{active?(new_user_session_path)}"}
        = link_to "Log In", new_user_session_path
      %li{:class => "nav-item #{active?(new_user_registration_path)}"}
        = link_to "Sign Up", new_user_registration_path