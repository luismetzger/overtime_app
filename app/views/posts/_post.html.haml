%tr
  %td= post.id
  %td= truncate(post.rationale)
  %td= post.date
  %td= post.user_id
  %td= post.user.full_name
  %td= link_to 'Edit', edit_post_path(post), :id => "edit_#{post.id}"
  %td= link_to 'Delete', post_path(post), method: :delete, :id => "delete_post_#{post.id}_from_index", data: { confirm: "Are you sure?" }